{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ES2020",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "exclude": ["src/**/*.spec.ts"],
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    "vercel.json"
  ],
  "references": [{ "path": "../lib" }]
}
