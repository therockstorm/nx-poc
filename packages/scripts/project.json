{
  "projectType": "library",
  "root": "packages/scripts",
  "sourceRoot": "packages/scripts",
  "tags": ["scope:shared"],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/scripts",
        "main": "packages/scripts/index.mjs",
        "tsConfig": "packages/scripts/tsconfig.json"
      }
    },

    "dev": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "./index.mjs",
        "cwd": "packages/scripts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/scripts/**/*.mjs"]
      }
    }
  }
}
