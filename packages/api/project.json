{
  "implicitDependencies": ["api-spec"],
  "projectType": "application",
  "root": "packages/api",
  "sourceRoot": "packages/api/src",
  "tags": ["scope:api"],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/api",
        "main": "packages/api/src/index.ts",
        "tsConfig": "packages/api/tsconfig.json"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "export AWS_REGION=us-west-2 && export GIT_SHORT_REV=$(git rev-parse --short HEAD) && export STAGE=${STAGE:-platdev} && cdk bootstrap --require-approval=never && cdk deploy --require-approval=never",
        "cwd": "packages/api"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/api/**/*.ts"]
      }
    }
  }
}
